<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.pawel.hellointellijplatformplugintemplate</id>
    <name>Hello-Jbintellij-Platform-Plug'in-Template</name>
    <vendor>pawel</vendor>

    <depends>com.intellij.modules.platform</depends>

    <applicationListeners>
        <listener class="com.github.pawel.hellointellijplatformplugintemplate.listeners.DumbBulkFileListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

    <projectListeners>
        <listener class="com.github.pawel.hellointellijplatformplugintemplate.listeners.MyBranchChangeListener"
                  topic="com.intellij.openapi.vcs.BranchChangeListener"/>
    </projectListeners>

    <actions>
        <action id="com.github.pawel.hellointellijplatformplugintemplate.actions.RegisterPsiTreeChangeListenerAction"
                class="com.github.pawel.hellointellijplatformplugintemplate.actions.RegisterPsiTreeChangeListenerAction"
                text="Register Psi Tree Change Listener Action" description="Register psi tree change listener action">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="com.github.pawel.hellointellijplatformplugintemplate.actions.RegisterPsiModificationTrackerAction"
                class="com.github.pawel.hellointellijplatformplugintemplate.actions.RegisterPsiModificationTrackerAction"
                text="RegisterPsiModificationTracker" description="Register psi modification tracker">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>
